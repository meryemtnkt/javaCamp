package javademos;

public class stringsDemo {

	public static void main(String[] args) {

		String mesaj="Bugün Hava Yaðýþlý ...   ";		
		System.out.println(mesaj);
		
		System.out.println("Eleman sayýsý :"+mesaj.length());
		
		System.out.println("5. Eleman : "+ mesaj.charAt(4));
		
		//mesaj sonuna kelime ekleme
		System.out.println(mesaj.concat("üzücü"));
		
		// a ile mi  baþlýyor
		System.out.println(mesaj.startsWith("a"));
		//. ile mi bitiyor
		System.out.println(mesaj.endsWith("."));
		
		//karakter aktarma
		char[] karakterler = new char[5];
		mesaj.getChars(0, 5, karakterler, 0);
		System.out.println(karakterler);
	
		//ilk bulduðu a da aramayý bitirir
		System.out.println(mesaj.indexOf('a'));
		
		//sondan aramaya baþlar
		System.out.println(mesaj.lastIndexOf('a'));
		
		//karaktere deðiþtirme
		System.out.println(mesaj.replace(' ', '-'));
		
		//metinden parça almak
		System.out.println(mesaj.substring(3,7));
		
		//bir metini belli bir karakter dizisine göre ayýrmak
		for(String kelime: mesaj.split(" ")) {
			System.out.println(kelime);
		}
		
		//bütün harfler küçük
		System.out.println(mesaj.toLowerCase());
		
		//bütün harfler büyük
		System.out.println(mesaj.toUpperCase());
		
		//baþýnda ve sonundaki  boþluklarý atma
		System.out.println(mesaj.trim());
	}

}
